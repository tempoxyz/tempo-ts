{
	"name": "tempo",
	"type": "module",
	"version": "0.0.0",
	"scripts": {
		"build": "zshy --project ./tsconfig.build.json",
		"check": "biome check . --write --unsafe",
		"check:types": "tsc -b",
		"gen:abis": "forge build --config-path ./contracts/specs/foundry.toml && bun scripts/gen:abis.ts && bun run check",
		"test": "vitest",
		"test:install": "cd test/tempo && cargo install --path bin/tempo"
	},
	"zshy": {
		"exports": {
			".": "./src/index.ts",
			"./chains": "./src/chains.ts",
			"./ox": "./src/ox/index.ts",
			"./prool": "./src/prool/index.ts",
			"./viem": "./src/viem/index.ts",
			"./viem/actions": "./src/viem/actions/index.ts",
			"./viem/abis": "./src/viem/abis.ts",
			"./viem/addresses": "./src/viem/addresses.ts",
			"./viem/chain": "./src/viem/chain.ts",
			"./viem/formatters": "./src/viem/formatters.ts",
			"./viem/transaction": "./src/viem/transaction.ts",
			"./viem/transport": "./src/viem/transport.ts"
		},
		"cjs": false,
		"conditions": {
			"src": "src"
		}
	},
	"dependencies": {
		"ox": "~0.9.9"
	},
	"peerDependencies": {
		"prool": "^0",
		"viem": ">=2.38"
	},
	"peerDependenciesMeta": {
		"prool": {
			"optional": true
		},
		"viem": {
			"optional": true
		}
	},
	"devEngines": {
		"runtime": {
			"name": "bun",
			"version": ">=1.2",
			"onFail": "error"
		}
	},
	"author": "jxom <j@wevm.dev>",
	"license": "MIT",
	"devDependencies": {
		"@ark/attest": "^0.49.0",
		"@biomejs/biome": "^2.2.4",
		"@elysiajs/node": "^1.4.1",
		"@types/bun": "latest",
		"elysia": "latest",
		"prool": "latest",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.2",
		"viem": "^2.38.0",
		"vitest": "^3.2.4",
		"zshy": "^0.4.2"
	},
	"files": [
		"dist"
	],
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"src": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./chains": {
			"src": "./src/chains.ts",
			"types": "./dist/chains.d.ts",
			"import": "./dist/chains.js"
		},
		"./ox": {
			"src": "./src/ox/index.ts",
			"types": "./dist/ox/index.d.ts",
			"import": "./dist/ox/index.js"
		},
		"./prool": {
			"src": "./src/prool/index.ts",
			"types": "./dist/prool/index.d.ts",
			"import": "./dist/prool/index.js"
		},
		"./viem": {
			"src": "./src/viem/index.ts",
			"types": "./dist/viem/index.d.ts",
			"import": "./dist/viem/index.js"
		},
		"./viem/actions": {
			"src": "./src/viem/actions/index.ts",
			"types": "./dist/viem/actions/index.d.ts",
			"import": "./dist/viem/actions/index.js"
		},
		"./viem/abis": {
			"src": "./src/viem/abis.ts",
			"types": "./dist/viem/abis.d.ts",
			"import": "./dist/viem/abis.js"
		},
		"./viem/addresses": {
			"src": "./src/viem/addresses.ts",
			"types": "./dist/viem/addresses.d.ts",
			"import": "./dist/viem/addresses.js"
		},
		"./viem/chain": {
			"src": "./src/viem/chain.ts",
			"types": "./dist/viem/chain.d.ts",
			"import": "./dist/viem/chain.js"
		},
		"./viem/formatters": {
			"src": "./src/viem/formatters.ts",
			"types": "./dist/viem/formatters.d.ts",
			"import": "./dist/viem/formatters.js"
		},
		"./viem/transaction": {
			"src": "./src/viem/transaction.ts",
			"types": "./dist/viem/transaction.d.ts",
			"import": "./dist/viem/transaction.js"
		},
		"./viem/transport": {
			"src": "./src/viem/transport.ts",
			"types": "./dist/viem/transport.d.ts",
			"import": "./dist/viem/transport.js"
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run check"
	}
}
