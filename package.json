{
	"name": "tempo.ts",
	"type": "module",
	"version": "0.0.5",
	"scripts": {
		"build": "zshy --project ./tsconfig.build.json",
		"changeset:publish": "bun run build && changeset publish",
		"changeset:version": "changeset version && bun run check",
		"check": "biome check . --write --unsafe",
		"check:types": "tsc -b",
		"gen:abis": "bun scripts/gen:abis.ts && bun run check",
		"submodules:pull": "git submodule foreach git pull origin main && pnpm gen:abis",
		"test": "vitest",
		"test:install": "cd test/tempo && cargo install --path bin/tempo && cargo run --bin tempo-bench generate-genesis --accounts 1 --output ../../prool/internal/chain.json"
	},
	"zshy": {
		"exports": {
			".": "./src/index.ts",
			"./chains": "./src/chains.ts",
			"./ox": "./src/ox/index.ts",
			"./prool": "./src/prool/index.ts",
			"./viem": "./src/viem/index.ts"
		},
		"cjs": false,
		"conditions": {
			"src": "src"
		}
	},
	"dependencies": {
		"ox": "~0.9.9"
	},
	"peerDependencies": {
		"prool": "^0",
		"viem": ">=2.38.2"
	},
	"peerDependenciesMeta": {
		"prool": {
			"optional": true
		},
		"viem": {
			"optional": true
		}
	},
	"packageManager": "bun@1.3.0",
	"author": "jxom <j@wevm.dev>",
	"license": "MIT",
	"devDependencies": {
		"@ark/attest": "^0.49.0",
		"@biomejs/biome": "^2.2.4",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.7",
		"@elysiajs/node": "^1.4.1",
		"@types/bun": "latest",
		"elysia": "latest",
		"prool": "latest",
		"simple-git-hooks": "^2.13.1",
		"typescript": "^5.9.2",
		"viem": "^2.38.2",
		"vitest": "^3.2.4",
		"zshy": "^0.4.2"
	},
	"files": [
		"dist",
		"src"
	],
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"src": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		},
		"./chains": {
			"src": "./src/chains.ts",
			"types": "./dist/chains.d.ts",
			"import": "./dist/chains.js"
		},
		"./ox": {
			"src": "./src/ox/index.ts",
			"types": "./dist/ox/index.d.ts",
			"import": "./dist/ox/index.js"
		},
		"./prool": {
			"src": "./src/prool/index.ts",
			"types": "./dist/prool/index.d.ts",
			"import": "./dist/prool/index.js"
		},
		"./viem": {
			"src": "./src/viem/index.ts",
			"types": "./dist/viem/index.d.ts",
			"import": "./dist/viem/index.js"
		},
		"./viem/actions": {
			"src": "./src/viem/actions/index.ts",
			"types": "./dist/viem/actions/index.d.ts",
			"import": "./dist/viem/actions/index.js"
		}
	},
	"simple-git-hooks": {
		"pre-commit": "bun run check"
	}
}