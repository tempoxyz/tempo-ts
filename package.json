{
	"scripts": {
		"build": "zile --project ./tsconfig.build.json",
		"changeset:prepublish": "pnpm build && node ./scripts/prepublish.ts",
		"changeset:publish": "pnpm changeset:prepublish && changeset publish",
		"changeset:version": "changeset version && pnpm check",
		"check": "biome check . --write --unsafe",
		"check:types": "tsgo -b",
		"check:types:examples": "pnpm --filter *-example check:types",
		"playground": "pnpm preconstruct && pnpm --filter playground dev",
		"postinstall": "git submodule update --init --recursive",
		"preconstruct": "zile dev --project ./tsconfig.build.json && pnpm check",
		"test": "vitest"
	},
	"packageManager": "pnpm@10.18.3",
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "^24.5.1",
			"onFail": "download"
		}
	},
	"devDependencies": {
		"@ark/attest": "^0.51.0",
		"@biomejs/biome": "^2.2.4",
		"@changesets/changelog-github": "^0.5.0",
		"@changesets/cli": "^2.27.7",
		"@types/express": "^5.0.5",
		"@types/http-proxy": "^1.17.17",
		"@types/node": "^24.10.0",
		"@types/react": "catalog:default",
		"@types/react-dom": "catalog:default",
		"@typescript/native-preview": "7.0.0-dev.20251110.1",
		"@vitejs/plugin-react": "catalog:default",
		"@vitest/coverage-v8": "^4.0.13",
		"elysia": "^1.4.16",
		"express": "^5.1.0",
		"hono": "^4.10.6",
		"prool": "catalog:default",
		"react": "catalog:default",
		"react-dom": "catalog:default",
		"simple-git-hooks": "^2.13.1",
		"testcontainers": "^11.10.0",
		"typescript": "catalog:default",
		"viem": "catalog:default",
		"vitest": "^4.0.13",
		"vitest-browser-react": "^2.0.2",
		"zile": "^0.0.13"
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm check"
	},
	"pnpm": {
		"overrides": {
			"ox": "~0.10.2",
			"tempo.ts": "workspace:*",
			"viem": "catalog:default"
		}
	},
	"[!start-pkg]": "",
	"name": "tempo.ts",
	"type": "module",
	"version": "0.11.0",
	"dependencies": {
		"@remix-run/fetch-router": "~0.12.0",
		"ox": "~0.10.2"
	},
	"peerDependencies": {
		"viem": ">=2.43.0"
	},
	"peerDependenciesMeta": {
		"@tanstack/react-query": {
			"optional": true
		},
		"@tanstack/query-core": {
			"optional": true
		},
		"prool": {
			"optional": true
		},
		"viem": {
			"optional": true
		}
	},
	"repository": {
		"url": "https://github.com/tempoxyz/tempo-ts"
	},
	"license": "MIT",
	"files": [
		"dist",
		"src",
		"CHANGELOG.md"
	],
	"sideEffects": false,
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"src": "./src/index.ts",
			"types": "./dist/index.d.ts",
			"default": "./dist/index.js"
		},
		"./server": {
			"src": "./src/server/index.ts",
			"types": "./dist/server/index.d.ts",
			"default": "./dist/server/index.js"
		}
	}
}
