{
	"name": "tempo",
	"private": true,
	"workspaces": [
		"src"
	],
	"scripts": {
		"build": "bun run --filter='*' build",
		"check": "biome check . --write --unsafe",
		"check:types": "tsc -b",
		"postinstall": "bun run build",
		"test": "bun test --conditions=src"
	},
	"devEngines": {
		"runtime": {
			"name": "bun",
			"version": ">=1.2",
			"onFail": "error"
		}
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@types/bun": "latest",
		"ox": "latest",
		"prool": "latest",
		"typescript": "^5.9.2",
		"viem": "latest",
		"zshy": "^0.4.2"
	}
}
